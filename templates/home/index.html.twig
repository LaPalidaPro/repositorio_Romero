{% extends 'frontened.html.twig' %}

{% block title %}Vive tu música{% endblock %}
{% block styles %}
{{ parent() }}
<link rel="stylesheet" href="{{ asset('css/reproductor.css') }}">
{% endblock %}

{% block body %}
   {% include 'nav.html.twig' %}
  <!-- Sección del héroe con carrusel -->
  <section class="hero">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-md-6">
          <h1>Descubre nueva música.</h1>
          <p>Encuentra tu próxima canción o artista favorito.</p>
          <a href="#" class="btn-play"><i class="fas fa-play"></i></a>
        </div>
        <div class="col-md-6">
          <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img src="https://via.placeholder.com/300" alt="Reproductor de música" class="img-fluid">
              </div>
              <div class="carousel-item">
                <img src="https://via.placeholder.com/300" alt="Otra imagen" class="img-fluid">
              </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Anterior</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Siguiente</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <h1 class="titulo-destacado">Canciones Destacadas</h1>
  <!-- Sección de canciones destacadas -->
  <section class="featured-songs">
       <div class="container" style="padding: 100px;padding-top: 0px;">

           <div class="row" id="contenedorCanciones">
           {% for cancion in datosCanciones %}
           <div class="col-md-3">
               <div class="cardBtn">
                   <div class="card" onclick="abrirReproductor(this)" data-audio-src="{{ asset('music/' ~ cancion.titulo) }}" data-cancion="{{ cancion.titulo }}" data-artista="{{ cancion.artista.nombre }}">
                       <img src="https://via.placeholder.com/300" class="card-img-top" alt="Canción">
                       <div class="card-body">
                           <h5 class="card-title">{{ cancion.titulo }}</h5>
                           <p class="card-text">{{ cancion.artista.nombre }}</p>
                       </div>
                   </div>
               </div>
           </div>
           {% endfor %}
           </div>

           <div class="pagination-container d-flex justify-content-center mt-4">
               {% if paginaActual > 1 %}
                   <a href="{{ path('app_home', {'pagina': paginaActual - 1}) }}" class="btn-flecha">
                       <p>Anterior <i class="fas fa-chevron-left"></i></p>
                   </a>
               {% endif %}
               {% if paginaActual < totalPaginas %}
                   <a href="{{ path('app_home', {'pagina': paginaActual + 1}) }}" class="btn-flecha">
                       <p>Siguiente <i class="fas fa-chevron-right"></i></p>
                   </a>
               {% endif %}
           </div>

       </div>
   </section>

<!-- Reproductor de audio -->
{% include 'reproductor.html.twig' %}

{% block custom_javascripts %}
    <script src="{{ asset('js/frontal.js') }}"></script>
    <script src="{{ asset('js/reproductor.js') }}"></script>
{% endblock %}
{% endblock %}
