{% extends 'frontened.html.twig' %}

{% block title %}Vive tu música{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/cancion.css') }}">
{% endblock %}

{% block body %}
    {% include 'nav.html.twig' %}
    <!-- Detalles de la canción -->
    <section class="container container-cancion mt-5">
        <div class="row">
            <div class="col-md-6 offset-md-3 text-center cancion-imagen">
                <a href="#">
                    <img src="https://via.placeholder.com/400" class="card-img-top" alt="Canción">
                    <h2 class="mb-3 tituloCancion">{{cancion.titulo}}/h2>
                    <p class="mb-4">{{cancion.idArtista}}</p>
                </a>
                <div class="d-flex justify-content-end">
                    <a id="heart-icon" class="nav-link" href="#"><i class="far fa-heart"></i></a>
                </div>
                <div class="player-controls d-flex justify-content-center">
                    <button class="btn btn-light me-3" onclick="playAudio()"><i class="fas fa-backward"></i></button>
                    <button class="btn btn-light me-3" onclick="playAudio()"><i class="fas fa-play"></i></button>
                    <button class="btn btn-light" onclick="playAudio()"><i class="fas fa-forward"></i></button>
                </div>
                <div class="playback-bar mt-3">
                    <input type="range" class="form-range" min="0" max="100" value="0">
                    <div class="d-flex justify-content-between">
                        <span>0:00</span>
                        <span>-:--</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <audio id="audio" src="{{ asset('canciones/nombre_de_la_cancion.mp3') }}"></audio>
{% endblock %}


