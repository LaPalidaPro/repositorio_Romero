{% extends 'frontend.html.twig' %}

{% block title %}
	{{ 'Vive tu m√∫sica'|trans }}
{% endblock %}

{% block styles %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('css/reproductor.css') }}">
	<link rel="stylesheet" href="{{ asset('css/navUsuario.css') }}">
	<style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            width: 100%;
        }
		.featured-songs {
			display: flex;
			flex-direction: column;
			width: 100%;
		}
		.cardBtn {
			width: 100%;
		}
		.card {
			display: flex;
			flex-direction: row;
			align-items: center;
			margin-bottom: 1rem;
			width: 100%;
			box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
		}
		.card img {
			width: 100px;
			height: 100px;
			object-fit: cover;
			margin-right: 1rem;
		}
		.card-body {
			flex: 1;
			display: flex;
			flex-direction: column;
			justify-content: center;
		}
		.card-title {
			font-size: 1.2rem;
			margin: 0;
		}
		.card-text {
			margin: 0;
		}
		.pie {
			background-color: #020202e8 !important; /* Color de fondo */
			color: #fff; /* Color del texto */
			padding: 20px 0; /* Espaciado interno */
			position: fixed;
			width: 100%;
			bottom: 0;
		}
	</style>
{% endblock %}

{% block body %}
	{% include 'nav.html.twig' %}
	<h1 class="titulo-destacado">{{ 'highlighted_songs'|trans }}</h1>
	<section class="featured-songs container-fluid">
		<div class="container-fluid mt-4">
        <div class="play-all-btn">
        <button class="btn btn-primary" onclick="playAllSongs()">
            <i class="fas fa-play"></i> {{ 'Play All'|trans }}
        </button>
    </div>
			<div id="contenedorCanciones">
				{% for favorito in datosCanciones %}
					<div class="cardBtn">
						<div class="card" data-audio-src="{{ asset('music/' ~ favorito.cancion.titulo) }}" data-cancion="{{ favorito.cancion.titulo }}" data-artista="{{ favorito.cancion.artista.nombre }}" data-id="{{ favorito.cancion.id }}" data-favorito="true" onclick="playSelectedSong(this)">
							<img src="https://via.placeholder.com/100" class="card-img-top" alt="{{ favorito.cancion.titulo }}">
							<div class="card-body">
								<h5 class="card-title">{{ favorito.cancion.titulo }}</h5>

							</div>
							<div class="card-body">
								<h5 class="card-title">{{ favorito.cancion.artista.nombre }}</h5>
								<p class="card-text">{{ favorito.cancion.duracion }}</p>
							</div>
							<div class="card-body">

								<p class="card-text">{{ favorito.cancion.duracion }}</p>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
	</div>
</section>
	{% include 'reproductor.html.twig' with {
        cancion: cancion_actual,
        tiempo: tiempo_actual,
        volumen: volumen_actual,
        corazon: corazon_actual
    } only %}

{% endblock %}


{% block custom_javascripts %}
	<script src="{{ asset('js/main.js') }}"></script>
{% endblock %}
