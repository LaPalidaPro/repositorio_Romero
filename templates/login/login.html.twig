{% extends 'frontend.html.twig' %}

{% block title %}
	Login
{% endblock %}

{% block styles %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}

{% block body %}
	{% include 'nav.html.twig' %}
	{% include 'mensajesFlash.html.twig' %}
	<div class="container">
        {% include 'mensajesFlash.html.twig' %}
        <div class="login-form">
            <h2>Iniciar Sesión</h2>
				{% if error %}
                    <div class="alert alert-danger">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}
            <form action="{{ path('app_login') }}" method="post">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="_username" value="{{ last_username }}" class="form-control" required autofocus>
                </div>
                <div class="form-group">
                    <label for="password">Contraseña</label>
                    <input type="password" id="password" name="_password" class="form-control" required>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <div class="form-group">
                    <div class="container boton">
                        <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
                    </div>
                </div>
                
            </form>
        </div>
    </div>
{% endblock %}

{% block custom_javascripts %}
	{{ parent() }}
{% endblock %}
