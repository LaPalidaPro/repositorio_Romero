<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8"/>
		<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
		<link rel="icon" href="{{asset('images/HHLogo.png')}}">
		<link rel="icon" href="{{asset('images/HH_logoNegro.png')}}">
		<title>HarmonyHub-
			{% block title %}{% endblock %}
		</title>
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
		<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

		{% block styles %}
			<link rel="stylesheet" href="{{ asset('css/admin.css') }}">
			<link rel="stylesheet" href="{{ asset('css/estilos.css') }}">
			<link rel="stylesheet" href="{{ asset('css/footer.css') }}">
		{% endblock %}

	</head>
	<body>
		{% block nav %}{% endblock %}
		{% block body %}{% endblock %}
		{% block footer %}
			<footer class="pie">
				<div class="container text-center">
					<p>&copy; 2023 HarmonyHub.
						{{ 'all_rights_reserved'|trans }}.</p>
					<p>{{ 'created_by'|trans }}.</p>
					<ul class="list-inline">
						<li class="list-inline-item">
							<a href="/">{{ 'home'|trans }}</a>
						</li>
						<li class="list-inline-item">
							<a href="/about">{{ 'about'|trans }}</a>
						</li>
						<li class="list-inline-item">
							<a href="/contact">{{ 'contact'|trans }}</a>
						</li>
					</ul>
				</div>
			</footer>
		{% endblock %}
	</body>

	{% block javascripts %}
		<!-- Incluye tus enlaces JavaScript aquí -->
		<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
		<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
		<script src="{{ asset('js/frontal.js') }}"></script>
		<!-- Añade tus otros enlaces JavaScript aquí -->
		{% block custom_javascripts %}{% endblock %}
	{% endblock %}
</html>
