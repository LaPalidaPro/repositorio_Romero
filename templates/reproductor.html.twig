<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <style>
    .close {
  font-size: 2.1rem;
  font-weight: 700;
  line-height: 1;
  color: #fff;
  margin: 20px;
  text-shadow: none;
  opacity: .6;
  
}
.close:hover {
  color: #eae6e6;
}
  </style>
</head>
<body>

</body>
<footer class="container-fluid bg-dark text-white py-3 fixed-bottom">
  <div class="row align-items-center">
    <div class="col-md-4 d-flex justify-content-center justify-content-md-start align-items-center">
      <div class="song-info text-center text-md-start">
        <div class="now-playing">Now Playing</div>
        <div class="song-details">
          <a href="{{ path('app_cancion') }}"> <img src="https://via.placeholder.com/100" alt="Canción"></a>
          <p class="song-artist">Artista</p>
        </div>
      </div>
    </div>
    <div class="col-md-4 d-flex justify-content-center align-items-center">
      <div class="player-controls-container position-relative">
        
        
        <div class="player-controls d-flex justify-content-center">
          <button class="btn btn-light me-3" onclick="backward()"><i class="fas fa-backward"></i></button>
          <button id="playPauseBtn" class="btn btn-light me-3" onclick="playPause()"><i class="fas fa-play"></i></button>
          <button class="btn btn-light" onclick="forward()"><i class="fas fa-forward"></i></button>
        </div>
        <div class="playback-bar mt-3">
          <input id="seekSlider" type="range" class="form-range" min="0" max="100" value="0" onchange="seek()">
          <div class="d-flex justify-content-between">
            <span id="currentTime">0:00</span>
            <span id="totalTime">-:--</span>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-4 mt-3 mt-md-0 d-flex justify-content-center justify-content-md-end align-items-center">
      <div class="volume-bar d-flex align-items-center">
        <i class="fas fa-volume-down me-2" id="volumeIcon" onclick="alternarBarraSonido()"></i>
        <input id="volumeSlider" type="range" class="form-range" min="0" max="1" step="0.01" value="1" style="display: none;" onchange="ajustarVolumen()">
        <a id="heart-icon" class="nav-link ms-2" href="#"><i class="far fa-heart"></i></a>
      </div>
    </div>
    <!-- Botón de cierre (X) en la esquina superior derecha -->
        <button type="button" class="close position-absolute" style="top: 0; right: 0; z-index: 1;" onclick="cerrarReproductor()">
          <span aria-hidden="true">&times;</span>
        </button>
  </div>
</footer>
<script>
function alternarBarraSonido() {
  var barraSonido = document.getElementById('volumeSlider');

  // Cambiar la visibilidad de la barra de sonido
  if (barraSonido.style.display === 'none') {
    barraSonido.style.display = 'block';
  } else {
    barraSonido.style.display = 'none';
  }
}

function ajustarVolumen() {
  var volumen = document.getElementById('volumeSlider').value;
  var iconoVolumen = document.getElementById('volumeIcon');

  // Determinar cuántas rallitas mostrar dependiendo del valor del volumen
  var numeroLineas = Math.ceil(volumen * 3); // En este caso, usamos 3 líneas como máximo

  // Actualizar las clases del ícono de volumen
  if (numeroLineas === 0) {
    iconoVolumen.className = 'fas fa-volume-mute';
  } else if (numeroLineas === 1) {
    iconoVolumen.className = 'fas fa-volume-down';
  } else {
    iconoVolumen.className = 'fas fa-volume-up';
  }
  audio.volume = volumen;
}

function cerrarReproductor() {
  var footer = document.querySelector('footer');
  footer.style.display = 'none';
}
</script>

</html>


