{# templates/album/verAlbum.html.twig #}
{% extends 'frontend.html.twig' %}

{% block title %}
	{{ album.nombre }}
{% endblock %}

{% block styles %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('css/reproductor.css') }}">
	<link rel="stylesheet" href="{{ asset('css/navUsuario.css') }}">
    <link rel="stylesheet" href="{{ asset('css/album.css') }}">
{% endblock %}

{% block body %}
	{% include 'nav.html.twig' %}
	<h1 class="titulo-destacado">{{ album.nombre }}</h1>
	<section class="featured-songs container-fluid">
		<div class="container-fluid mt-4">
			<div class="row">
				<div class="col-md-4 text-center">
					<img src="{{ '/images/grupos/' ~ album.fotoPortada }}" alt="{{ album.nombre }}" class="album-image">
				</div>
				<div class="col-md-8 text-left">
					<h2 class="mt-3">{{ album.nombre }}</h2>
					<p>
						<strong>Artista:</strong>
						{{ album.artista.nombre }}</p>
					<p>
						<strong>Fecha de Lanzamiento:</strong>
						{{ album.fechaLanzamiento|date('Y-m-d') }}</p>
					<p>
						<strong>Duración Total:</strong>
						{{ album.duracionTotal }}</p>
				</div>
			</div>
			<div class="row mt-5">
				<div class="col-md-12">
					<h3 class="text-center">Canciones</h3>
					<div id="contenedorCanciones" class="row">
						{% for cancion in canciones %}
							{% set titulo_sin_extension = cancion.titulo|split('.')[0] %}
							<div class="col-md-3 mb-4">
								<div class="cardBtn">
									<div class="card song-card" data-audio-src="{{ asset('music/' ~ cancion.titulo) }}" data-cancion="{{ cancion.titulo }}" data-artista="{{ cancion.artista.nombre }}" data-id="{{ cancion.id }}" data-favorito="true" onclick="playSelectedSong(this)">
										<img src="{{ '/images/grupos/' ~ cancion.album.fotoPortada }}" alt="Canción" class="song-image">
										<div class="card-body">
											<h5 class="card-title">{{ titulo_sin_extension }}</h5>
										</div>
										<div class="card-body">
											<h5 class="card-title">{{ cancion.artista.nombre }}</h5>
											<p class="card-text">Reproducciones:
												{{ cancion.numeroReproducciones }}</p>
										</div>
									</div>
								</div>
							</div>
						{% endfor %}
					</div>
				</div>
			</div>
			<div class="text-center mt-4">
				<a href="{{ path('app_home') }}" class="btn btn-primary">Volver a Principal</a>
			</div>
		</div>
	</section>
	{% include 'reproductor.html.twig' with {
        cancion: cancion_actual,
        tiempo: tiempo_actual,
        volumen: volumen_actual,
        corazon: corazon_actual
    } only %}
{% endblock %}

{% block custom_javascripts %}
	<script src="{{ asset('js/main2.js') }}"></script>
	<script src="{{ asset('js/incrementarReproduccion.js') }}"></script>
	
{% endblock %}
